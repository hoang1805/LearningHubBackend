spring.application.name=LearningHubBackend

spring.datasource.url=jdbc:mysql://localhost:3306/YOUR_DATABASE?useSSL=false
spring.datasource.username=YOUR_DB_USERNAME
spring.datasource.password=YOUR_DB_PASSWORD

## Hibernate Properties
# The SQL dialect makes Hibernate generate better SQL for the chosen database
spring.jpa.properties.hibernate.dialect = org.hibernate.dialect.MySQLDialect
# Hibernate ddl auto (create, create-drop, validate, update)
spring.jpa.hibernate.ddl-auto = update

logging.level.org.hibernate = ERROR
logging.level.org.springframework.security=DEBUG
logging.level.org.springframework.security.web.csrf=TRACE

spring.docker.compose.enabled=false


app.client.url = YOUR_CLIENT_URL
# rate limit per sec
app.api.rateLimit = 10
app.api.maxQueue = 1000

app.jwt.secret = YOUR_JWT_SECRET
app.jwt.expire.accessToken = 1h
app.jwt.expire.refreshToken = 120d